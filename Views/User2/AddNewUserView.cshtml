@model Universities2.Models.ClassUser2

@{
    ViewData["Title"] = "AddNewUserView";
}

<h1>AddNewUserView"</h1>
<div class="row">
    <div class="col">

        @if (ViewData["msg"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@ViewData["msg"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col border border-info p-1 rounded">
        <form method="get" asp-action="UserAddF1" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="UserID">ID</label>
                    <input required type="text" asp-for="UserID" class="form-control" placeholder="رقم الهوية" />
                </div>
                <div class="form-group col-md-3">
                    <label for="UserName">Name</label>
                    <input required type="text" asp-for="UserName" class="form-control" placeholder="الاسم" />
                </div>
                <div class="form-group col-md-6">
                    <label for="UserEmail">Email</label>
                    <input required type="email" asp-for="UserEmail" class="form-control" placeholder="الايميل" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="UserAge">Age</label>
                    <input type="number" asp-for="UserAge" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label for="UserPassword">Password</label>
                    <input type="password" asp-for="UserPassword" class="form-control" placeholder="كلمة المرور" />
                </div>
            </div>


            <div class="form-row">
                
                <div class="form-group col-md-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="male" asp-for="UserGender">
                        <label class="form-check-label" for="UserGender">
                            Male
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="female" asp-for="UserGender">
                        <label class="form-check-label" for="UserGender">
                            Female
                        </label>
                    </div>

                </div>
            </div>

            

            <button type="submit" class="btn btn-primary">Sign UP</button>
        </form>
    </div>
</div>

