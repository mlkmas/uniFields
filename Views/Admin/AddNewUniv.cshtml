@model Universities2.Models.ClassUniv2
@{
    ViewData["Title"] = "AddNewUniv";
}
<h1>AddNewUserView"</h1>
<div class="row">
    <div class="col">

        @if (ViewData["msg"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@ViewData["msg"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col border border-info p-1 rounded">
        <form method="get" asp-action="F11" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="UnivName">Name</label>
                    <input required type="text" asp-for="UnivName" class="form-control" placeholder="اسم الجامعة/الكلية " />
                </div>
          
                <div class="form-group col-md-6">
                    <label for="UnivEmail">Email</label>
                    <input required type="email" asp-for="UnivEmail" class="form-control" placeholder="الايميل" />
                </div>
                <div class="form-group col-md-6">
                    <label for="UnivOffWeb">Website</label>
                    <input required type="email" asp-for="UnivOffWeb" class="form-control" placeholder="الايميل" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="UnivPlace">Place</label>
                    <input required type="text" asp-for="UnivPlace" class="form-control" placeholder="مكان" />
                </div>
                <div class="form-group col-md-6">
                    <label for="UnivPhoto">Photo</label>
                    <input type="password" asp-for="UnivPhoto" class="form-control" placeholder=" صورة" />
                </div>
            </div>


            <div class="form-row">

                <div class="form-group col-md-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="Yes" asp-for="UnivOpen">
                        <label class="form-check-label" for="UnivOpen">
                            Yes
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="No" asp-for="UnivOpen">
                        <label class="form-check-label" for="UnivOpen">
                            No
                        </label>
                    </div>


                </div>
            </div>



            <button type="submit" class="btn btn-primary">Sign UP</button>
        </form>
    </div>
</div>



